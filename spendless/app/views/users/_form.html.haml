= form_for @user do |f|
  .form-horizontal
    .fieldset
      .form-group
        .col-lg-6
          .form-group
            = f.label :first_name, :class => "col-lg-2 control-label"
            .col-lg-10
              = f.text_field :first_name, :class => "form-control", type: "first_name"
          .form-group
            = f.label :last_name, :class => "col-lg-2 control-label", type: "last_name"
            .col-lg-10
              = f.text_field :last_name, :class => "form-control"
          .form-group
            = f.label "Email Address", :class => "col-lg-2 control-label"
            .col-lg-10
              = f.text_field :email, :class => "form-control"
          .form-group
            = f.label :password, :class => "col-lg-2 control-label"
            .col-lg-10
              = f.text_field :password, :class => "form-control", type: "password"
          .form-group
            = f.label "Confirm Password", :class => "col-lg-2 control-label"
            .col-lg-10
              = f.text_field :password_confirmation, :class => "form-control", type: "password"
          .form-group
            = f.label :phone_number, :class => "col-lg-2 control-label"
            .col-lg-10
              = f.text_field :phone_number, :class => "form-control", type: "phone_number"
          .form-group
            = f.label :birthday, :class => "col-lg-2 control-label"
            .col-lg-10
              = f.date_field :birthday, :class => "form-control"
          .actions
            .form-group
              .col-lg-10.col-lg-offset-2
                = f.submit 'Save', :class => "btn btn-primary"
                = link_to 'Cancel', users_path, :class => "btn btn-default"